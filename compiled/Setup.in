*noconfig*

pybdir=@libpyb@
top_builddir=..

# to avoid using config.h from python distribution
CFLAGS=	-I.. $(OPT) -I$(INCLUDEPY) -I$(EXECINCLUDEPY) $(DEFS)


_bibtex	-I$(srcdir)/../bibtex 				\
	@GLIB_CFLAGS@ @RECODEINC@			\
       	bibtexmodule.c ../bibtex/.libs/libbibtex.a 	\
	@GLIB_LIBS@ @RECODELIB@

_recode	@RECODEINC@ recodemodule.c @RECODELIB@

