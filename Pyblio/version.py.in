# -*- python -*-

import os.path

_topdir = os.path.dirname(os.path.dirname(os.path.realpath(__file__)))
_installed = not os.path.exists(os.path.join(_topdir, 'pybliographer.in'))

version = '@version@'

if _installed:
    datadir = '@p_datadir@'
    pybdir = '@datapyb@'
    localedir = '@locale_dir@'
    pixmapsdir = os.path.join(pybdir, 'pixmaps')
else:
    datadir = os.path.join(_topdir, 'data')
    pybdir = _topdir
    localedir = None
    pixmapsdir = os.path.join(datadir, 'pixmaps')
