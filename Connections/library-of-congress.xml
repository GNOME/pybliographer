<?xml version="1.0"?>

<connection>
  <name>Library of Congress</name>
  
  <server type="z3950">
    <url>z3950://z3950.loc.gov/</url>
  </server>

  <query>
    <default>
      <fields name="query">
        <operator name="contains">Contains</operator>

        <field name="1035"><title>All Fields</title></field>
        <field name="1035"><title>Any Fields</title></field>
        <field name="1003"><title>Author</title></field>
        <field name="1"><title>Personal Author (Last, First)</title></field>
        <field name="1"><title>Personal Name</title></field>
        <field name="2"><title>Corporate Name</title></field>
        <field name="3"><title>Conference Name</title></field>
        <field name="5"><title>Title (Phrase)</title></field>
        <field name="4"><title>Title (Word)</title></field>
        <field name="6"><title>Uniform Title</title></field>
        <field name="21"><title>Keywords</title></field>
        <field name="21"><title>Subject</title></field>
        <field name="27"><title>Subject (Authorized)</title></field>
        <field name="30"><title>Year</title></field>
        <field name="31"><title>Date of Publication</title></field>
        <field name="33"><title>Key Title (serials)</title></field>
        <field name="7"><title>ISBN</title></field>
        <field name="8"><title>ISSN</title></field>
        <field name="9"><title>LCCN</title></field>
        <field name="16"><title>LC Call Number</title></field>
        <field name="1009"><title>Subject (Personal Name)</title></field>
        <field name="51"><title>Publisher's Number</title></field>
        <field name="58"><title>Geographic Name</title></field>
        <field name="63"><title>Note</title></field>
        <field name="1032"><title>Electronic access</title></field>
      </fields>
    </default>
  </query>
</connection>