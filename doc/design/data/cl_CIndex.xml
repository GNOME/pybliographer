<?xml version="1.0" encoding="iso8859-1" ?>

<!DOCTYPE classinfo SYSTEM '../txdata.dtd' >


<classinfo name="CIndex" type="display controller">
  <title>Index Display
  </title>
  <summary>
    Display a result set (iterator) as an index listing.
  </summary>
  <operation type="signal">add-item</operation>
  <operation type="signal">remove-item</operation>
  <operation type="signal">update-item</operation>
  <operation type="signal">change-size</operation>
  <operation type="signal">set-position</operation>
  <operation type="signal">scroll-position</operation>
  <operation type="signal">update-selection (?)</operation>
  <operation type="signal">accept-dnd (?)</operation>
  
  <operation>add_item : item, iter updates display, ...</operation>
  <operation>update_item : item, iter updates display, ...</operation>
  <operation>delete_item : item, iter updates display, ...</operation>
  <operation>filter_item : item, iter -> bool</operation>
  <operation>display: iter, sort=None... </operation>
  
</classinfo>


