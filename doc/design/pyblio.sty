\divide\ftlength by -2
\addtolength\ftlength{.5\textwidth}
\showthe\ftlength\noindent\par
\rule{\thinrule}{\xheight}\kern-\thinrule%
\rule[\xheight]{\ftlength}{\thinrule}%
\usebox{\ffnotetitle}%
\rule[\xheight]{\ftlength}{\thinrule}\kern-\thinrule%
\rule{\thinrule}{\xheight}\par} 
{\setlength{\ftlength}{\textwidth}
  \addtolength\ftlength{-\thinrule}
  \addtolength{\ftlength}{-\thinrule}
\hbox{\indent\rule{\thinrule}{\xheight}%
\rule{\ftlength}{\thinrule}%
\rule{\thinrule}{\xheight}}}
