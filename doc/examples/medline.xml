<?xml version="1.0"?>

<Connection>
  <Name>Medline</Name>

  <Server type="medline">
    <Host>medline.toto.com</Host>
    <Parameter name="a"></Parameter>
  </Server>

  <Query>
    <Default>
      <!-- Dynamic number of fields, connected by boolean connectors -->
      <Fields name="query" max="4">
        <Title>Avail. Fields</Title>
	
	<!-- Common operators -->
        <Operator name="equal">Matches</Operator>

	<!-- A single field entry with its specific operators -->        
        <Field name="author" type="text">
	  <Title>Author</Title>
	  <Operator name="like">Like</Operator>
	</Field>

        <Field name="date" type="date">
	  <Title>Publication Date</Title>
	  <Operator name="before">Before</Operator>
	  <Operator name="after">After</Operator>
	</Field>
      </Fields>

      <Group>
        <Title>This is a group</Title>
        <Selection name="language" default="english">
	  <Title>Select Language</Title>
	  <Item name="french">French</Item>
	  <Item name="english">English</Item>
	</Selection>

	<Toggle name="abstracts" default="true">Only with abstracts</Toggle>
      </Group>

      <Entry name="entry" type="text">Entry content</Entry>
    </Default>

  </Query>
</Connection>